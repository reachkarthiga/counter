<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.example.counter.models.Tags" />
    </data>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id = "@+id/list_item"
    >


        <TextView
            android:id="@+id/tag_name"
            style="@style/text_list"
            android:text="@{item.tagName}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity = "start"
            android:layout_marginTop="@dimen/margin_border"
            android:layout_marginBottom="@dimen/margin_border"
            tools:text="Sample Tag" />

        <TextView
            android:id="@+id/tag_count"
            style="@style/text_list"
            android:text="@{String.valueOf(item.count)}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_border"
            android:gravity = "end"
            android:layout_marginBottom="@dimen/margin_border"
            tools:text="42" />

    </RelativeLayout>

</layout>
