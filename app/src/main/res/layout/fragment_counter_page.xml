<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".counterTag.CounterPage">

    <data>
        <variable
            name="viewModel"
            type="com.example.counter.counterTag.CounterViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/color_primary"
            app:titleTextColor="@color/white"
            app:title="Counters" />

        <TextView
            android:id="@+id/counter_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/TextAppearance.Material3.HeadlineSmall"
            android:visibility= "@{viewModel.showCounterName}"
            tools:text="Sample counter"
            android:layout_marginTop="16dp"
            android:text = "@{viewModel.counterName}"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            />

        <TextView
            android:id="@+id/count_value"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:textSize="100sp"
            android:text="@{String.valueOf(viewModel.count)}"
            app:layout_constraintTop_toBottomOf="@+id/counter_name"
            tools:text="2" />

        <TextView
            android:id="@+id/increment"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:text="+"
            android:onClick="@{() -> viewModel.increaseCountValue()}"
            android:textSize="80sp"
            app:layout_constraintDimensionRatio=""
            app:layout_constraintEnd_toStartOf="@+id/decrement"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/count_value" />

        <TextView
            android:id="@+id/decrement"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:text="-"
            android:onClick="@{() -> viewModel.decreaseCountValue()}"
            android:textSize="80sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/increment"
            app:layout_constraintTop_toBottomOf="@+id/count_value" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/tag_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_border"
            android:background="@drawable/edittext_background"
            android:hint="Tag Name"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/add_tag"
            app:layout_constraintEnd_toStartOf="@+id/add_tag"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/add_tag" />

        <TextView
            android:id="@+id/add_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_border"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text= " Add Tag "
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:textColor = "@color/black"
            android:background="@drawable/button_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tag_name"
            app:layout_constraintTop_toBottomOf="@id/decrement" />
        
        <androidx.recyclerview.widget.RecyclerView
            android:id = "@+id/tag_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/add_tag"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/margin_border"
            tools:listitem="@layout/counter_list_item_view"
           />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>