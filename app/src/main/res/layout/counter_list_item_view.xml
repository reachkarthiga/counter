<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
   >

    <data>
        <variable
            name="viewModel"
            type="com.example.counter.models.Counter" />

        <variable
            name="clickListener"
            type="com.example.counter.savedCounters.CounterClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:onClick="@{() -> clickListener.onClick(viewModel)}">

    <TextView
        android:layout_width="0dp"
        android:layout_weight = "2"
        android:layout_height="wrap_content"
        android:id = "@+id/counter_name"
        tools:text = "Sample counter"
        android:text = "@{viewModel.name}"
        android:textColor = "@color/black"
        style="@style/TextAppearance.AppCompat.Medium"

        />

    <TextView
        android:layout_width="0dp"
        android:layout_weight = "1"
        android:gravity = "center"
        android:layout_height="wrap_content"
        android:id = "@+id/counter_count"
        tools:text = "42"
        android:textColor = "@color/black"
        style="@style/TextAppearance.AppCompat.Medium"
        android:text="@{String.valueOf(viewModel.count)}"

       />

    </LinearLayout>

</layout>